<aura:component description="ProductSets" implements="force:appHostable,flexipage:availableForAllPageTypes" access="global">

    <aura:attribute name = "selectedProductSet" type="Id" access="public"/>

    <aura:handler name="changeProductSet" event="c:LoadProductSetItemsEvent" action="{!c.handleSelectProductSet}"/>

    <lightning:layout>

        <lightning:layoutItem padding="horizontal-small">
            <lightning:badge label="Product Sets"/>
        </lightning:layoutItem>
        <lightning:layoutItem >
            <c:ProductSetItems/>
            <c:CategoryList/>
        </lightning:layoutItem>
        <lightning:layoutItem >
            <c:ProductSetItemList productSetId="{!v.selectedProductSet}"/>
        </lightning:layoutItem>
    </lightning:layout>

</aura:component>
